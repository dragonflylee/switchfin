<brls:Box
    highlightCornerRadius="8"
    axis="column"
    width="auto"
    height="auto">
    <brls:Box
        id="video/card/pic_box"
        axis="row"
        width="100%"
        grow="1.0f"
    >
        <brls:Image
            id="video/card/picture"
            backgroundColor="@theme/color/grey_1"
            scalingType="fill"
            width="100%"
            height="100%"
            image="@res/img/video-card-bg.png"
            cornerRadius="4" />

        <brls:Label
            id="video/card/badge/top"
            positionType="absolute"
            positionTop="8"
            positionRight="0"
            height="24" />

        <brls:Box
            positionBottom="0"
            positionType="absolute"
            background="vertical_linear"
            paddingLeft="10"
            paddingRight="10"
            width="100%"
            height="20%"
            alignItems="center">
            <brls:Label
                marginLeft="4"
                marginRight="4"
                textColor="#FFFFFF"
                id="video/card/label/count"
                fontSize="16" />
            <brls:Label
                id="video/card/label/duration"
                positionType="absolute"
                positionRight="0"
                textColor="#FFFFFF"
                fontSize="16" />
        </brls:Box>

        <brls:Box
            wireframe="false"
            positionType="absolute"
            positionBottom="0"
            width="100%"
            height="2"
            backgroundColor="#353535">
            <brls:Rectangle
                id="video/card/progress"
                height="2"
                width="50%"
                color="@theme/color/app" />
        </brls:Box>

    </brls:Box>

    <brls:Box
        axis="column"
        height="50px"
        alignItems="center">
        <brls:Label
            wireframe="false"
            marginTop="5"
            id="video/card/label/title"
            fontSize="18" />
        <brls:Label
            wireframe="false"
            id="video/card/label/ext"
            fontSize="13"
            marginTop="5"
            textColor="@theme/font/grey" />
    </brls:Box>

</brls:Box>