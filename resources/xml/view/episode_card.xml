<brls:Box
    highlightCornerRadius="8"
    padding="5">

    <brls:Box
        axis="row"
        width="300"
        alignItems="center">
        <brls:Box>
            <brls:Image
                id="video/card/picture"
                backgroundColor="@theme/color/grey_1"
                scalingType="fit"
                image="@res/img/video-card-bg.png" />

            <SVGImage
                id="video/card/badge/top"
                positionType="absolute"
                positionTop="8"
                positionRight="8"
                height="24" />
        </brls:Box>
    </brls:Box>

    <brls:Box
        axis="column"
        marginLeft="20">
        <brls:Label
            id="episode/card/name"
            margin="10"
            singleLine="true"
            fontSize="18" />

        <brls:Label
            id="episode/card/overview"
            fontSize="15"
            animated="false"
            textColor="@theme/font/grey" />
    </brls:Box>

</brls:Box>