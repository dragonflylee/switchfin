<brls:Box
    lineColor="@theme/brls/header/border"
    lineBottom="1"
    alignItems="center"
    focusable="true">

    <SVGImage
        width="80"
        height="auto"
        svg="@res/icon/ico-server.svg" />

    <brls:Box
        axis="column"
        marginLeft="10">

        <brls:Label
            id="server/name"
            marginTop="10"
            marginBottom="10"
            fontSize="25" />

        <brls:Label
            id="server/url"
            marginLeft="4"
            fontSize="15"
            singleLine="true"
            textColor="@theme/font/grey" />

        <brls:Label
            id="server/users"
            marginTop="10"
            marginBottom="10"
            fontSize="18" />
    </brls:Box>

</brls:Box>