<brls:Box
    width="100%"
    height="100%"
    axis="column"
    justifyContent="spaceBetween"
    alignItems="center">

    <brls:Box
        width="50"
        height="50"
        alignItems="center"
        hideHighlightBackground="true"
        highlightCornerRadius="10"
        backgroundColor="#303030A0"
        focusable="true"
        focusUp="video/osd/setting/icon"
        focusDown="video/osd/icon/box"
        focusRight="video/osd/backward/icon"
        focusLeft="video/osd/lock/box"
        cornerRadius="8"
        positionTop="45%"
        positionRight="20"
        positionType="absolute"
        id="video/osd/lock/box">
        <SVGImage
            id="video/osd/lock/icon"
            detachedX="13"
            detachedY="13"
            height="24"
            width="24"
            svg="@res/icon/player-unlock.svg" />
    </brls:Box>

    <brls:Box
        id="video/osd/top/box"
        width="100%"
        height="80"
        backgroundStartColor="#000000CC"
        backgroundEndColor="#00000000"
        background="vertical_linear">

        <brls:Box
            id="video/close/box"
            hideClickAnimation="true"
            marginLeft="10"
            marginRight="10"
            alignItems="center"
            justifyContent="center"
            height="60">
            <brls:Label
                id="video/close"
                marginTop="7"
                marginLeft="1"
                focusable="true"
                focusUp="video/close"
                focusRight="video/osd/backward/icon"
                focusDown="video/osd/bottom/box"
                focusLeft="video/close"
                horizontalAlign="center"
                verticalAlign="center"
                lineHeight="1"
                fontSize="32"
                text="" />
        </brls:Box>

        <brls:Label
            id="video/osd/title"
            height="100%"
            marginLeft="20"
            marginRight="120"
            singleLine="true"
            textColor="#FFFFFF" />

        <brls:Box
            positionType="absolute"
            positionRight="10"
            positionTop="10">
            <brls:Box
                wireframe="false"
                id="video/osd/backward"
                alignItems="center"
                justifyContent="center"
                visibility="gone"
                height="50"
                width="50">
                <SVGImage
                    id="video/osd/backward/icon"
                    focusable="true"
                    focusUp="video/osd/backward/icon"
                    focusLeft="video/close"
                    focusRight="video/osd/forward/icon"
                    focusDown="video/osd/bottom/box"
                    hideHighlightBackground="true"
                    highlightCornerRadius="30"
                    height="30"
                    width="30"
                    svg="@res/icon/ico-backward.svg" />
            </brls:Box>
            <brls:Box
                wireframe="false"
                id="video/osd/forward"
                alignItems="center"
                justifyContent="center"
                visibility="gone"
                height="50"
                width="50">
                <SVGImage
                    id="video/osd/forward/icon"
                    focusable="true"
                    focusUp="video/osd/forward/icon"
                    focusLeft="video/osd/backward/icon"
                    focusRight="video/osd/cast/icon"
                    focusDown="video/osd/bottom/box"
                    hideHighlightBackground="true"
                    highlightCornerRadius="30"
                    height="30"
                    width="30"
                    svg="@res/icon/ico-forward.svg" />
            </brls:Box>
            <brls:Box
                wireframe="false"
                id="video/osd/cast"
                alignItems="center"
                justifyContent="center"
                height="50"
                width="50">
                <SVGImage
                    id="video/osd/cast/icon"
                    focusable="true"
                    focusUp="video/osd/cast/icon"
                    focusLeft="video/osd/forward/icon"
                    focusRight="video/osd/setting/icon"
                    focusDown="video/osd/bottom/box"
                    hideHighlightBackground="true"
                    highlightCornerRadius="30"
                    height="30"
                    width="30"
                    svg="@res/icon/ico-cast.svg" />
            </brls:Box>
            <brls:Box
                wireframe="false"
                id="video/osd/setting"
                hideClickAnimation="true"
                alignItems="center"
                justifyContent="center"
                height="50"
                width="50">
                <SVGImage
                    id="video/osd/setting/icon"
                    focusable="true"
                    focusUp="video/osd/setting/icon"
                    focusLeft="video/osd/cast/icon"
                    focusRight="video/osd/setting/icon"
                    focusDown="video/osd/bottom/box"
                    hideHighlightBackground="true"
                    highlightCornerRadius="30"
                    height="30"
                    width="30"
                    svg="@res/icon/ico-player-setting.svg" />
            </brls:Box>
        </brls:Box>

        <brls:Box
            id="video/speed/hint/box"
            width="100%"
            positionBottom="-10"
            visibility="gone"
            positionType="absolute"
            justifyContent="center"
            alignItems="center">
            <brls:Box
                backgroundColor="#00000080"
                cornerRadius="4"
                justifyContent="center"
                alignItems="center">
                <brls:Label
                    marginLeft="64"
                    marginRight="8"
                    marginTop="6"
                    marginBottom="6"
                    textColor="#FFFFFF"
                    id="video/speed/hint/label" />
            </brls:Box>
        </brls:Box>
    </brls:Box>

    <brls:Box
        axis="column"
        alignItems="center"
        justifyContent="center"
        visibility="gone"
        cornerRadius="4"
        width="100"
        height="100"
        backgroundColor="#303030A0"
        id="video/osd/info/box">
        <SVGImage
            id="video/osd/info/icon"
            height="30"
            width="30"
            marginBottom="20" />
        <brls:Label
            id="video/osd/info/label"
            textColor="#FFFFFF"
            fontSize="24"
            height="16"
            horizontalAlign="center"
            verticalAlign="center" />
    </brls:Box>

    <brls:Box
        axis="column"
        alignItems="center"
        id="video/osd/center/box">
        <brls:ProgressSpinner
            id="video/osd/loading"
            width="100"
            height="100" />
        <brls:Label
            id="video/osd/center/label"
            visibility="invisible"
            cornerRadius="4"
            backgroundColor="#303030A0"
            textColor="#FFFFFF"
            fontSize="16"
            height="16"
            horizontalAlign="center"
            verticalAlign="center" />
    </brls:Box>

    <brls:Box
        id="video/osd/bottom/box"
        width="100%"
        height="120"
        alignItems="center"
        axis="row"
        background="vertical_linear">

        <brls:Box
            id="video/osd/toggle"
            wireframe="false"
            focusable="true"
            focusUp="video/osd/setting"
            focusLeft="video/osd/toggle"
            focusRight="video/osd/icon/box"
            hideHighlightBackground="true"
            highlightCornerRadius="100"
            alignItems="center"
            justifyContent="center"
            marginLeft="20"
            marginBottom="20"
            height="60"
            width="60">
            <SVGImage
                id="video/osd/toggle/icon"
                wireframe="false"
                height="60"
                width="60"
                svg="@res/icon/ico-play.svg" />
        </brls:Box>

        <brls:Box
            width="auto"
            grow="1"
            height="100"
            axis="column">
            <VideoProgressSlider
                focusable="false"
                id="video/osd/bottom/progress"
                width="100%"
                height="50"
                marginTop="10"
                grow="1" />
            <brls:Box
                width="100%"
                alignItems="center"
                grow="1">
                <brls:Label
                    wireframe="false"
                    horizontalAlign="right"
                    id="video/left/status"
                    height="100%"
                    width="100"
                    textColor="#FFFFFF"
                    text="00:00" />
                <brls:Label
                    horizontalAlign="center"
                    height="100%"
                    textColor="#FFFFFF"
                    text="/" />
                <brls:Label
                    wireframe="false"
                    horizontalAlign="left"
                    id="video/right/status"
                    height="100%"
                    width="100"
                    textColor="#FFFFFF"
                    text="00:00" />
                <brls:Box
                    id="video/osd/icon/box"
                    positionType="absolute"
                    positionRight="20">
                    <brls:Box
                        id="video/osd/volume"
                        hideClickAnimation="true"
                        alignItems="center"
                        justifyContent="center"
                        height="60"
                        width="60">
                        <SVGImage
                            focusable="true"
                            focusUp="video/osd/setting"
                            focusDown="video/osd/volume"
                            id="video/osd/volume/icon"
                            hideHighlightBackground="true"
                            highlightCornerRadius="30"
                            wireframe="false"
                            height="30"
                            width="30"
                            svg="@res/icon/ico-volume.svg" />
                    </brls:Box>
                    <brls:Box
                        id="show/episode/box"
                        hideClickAnimation="true"
                        marginLeft="10"
                        marginRight="10"
                        visibility="gone"
                        alignItems="center"
                        justifyContent="center"
                        height="60">
                        <brls:Label
                            id="show/episode"
                            textColor="#FFFFFF"
                            focusable="true"
                            focusUp="video/osd/setting"
                            focusDown="show/episode"
                            horizontalAlign="center"
                            text="@i18n/main/player/episode"
                            hideHighlightBackground="true"
                            highlightCornerRadius="8" />
                    </brls:Box>
                    <brls:Box
                        id="video/chapter/box"
                        hideClickAnimation="true"
                        marginLeft="10"
                        marginRight="10"
                        alignItems="center"
                        justifyContent="center"
                        height="60">
                        <brls:Label
                            id="video/chapter"
                            textColor="#FFFFFF"
                            text="@i18n/main/player/chapter"
                            focusable="true"
                            focusUp="video/osd/setting"
                            focusDown="video/chapter"
                            horizontalAlign="center"
                            hideHighlightBackground="true"
                            highlightCornerRadius="8" />
                    </brls:Box>
                    <brls:Box
                        id="video/quality/box"
                        hideClickAnimation="true"
                        marginLeft="10"
                        marginRight="10"
                        alignItems="center"
                        justifyContent="center"
                        height="60">
                        <brls:Label
                            id="video/quality"
                            textColor="#FFFFFF"
                            focusable="true"
                            focusUp="video/osd/setting"
                            focusDown="video/quality"
                            horizontalAlign="center"
                            text="@i18n/main/player/quality"
                            hideHighlightBackground="true"
                            highlightCornerRadius="8" />
                    </brls:Box>
                    <brls:Box
                        id="video/speed/box"
                        hideClickAnimation="true"
                        marginLeft="10"
                        marginRight="10"
                        alignItems="center"
                        justifyContent="center"
                        height="60">
                        <brls:Label
                            id="video/speed"
                            textColor="#FFFFFF"
                            focusable="true"
                            focusUp="video/osd/setting"
                            focusDown="video/speed"
                            horizontalAlign="center"
                            text="@i18n/main/player/speed"
                            hideHighlightBackground="true"
                            highlightCornerRadius="8" />
                    </brls:Box>
                </brls:Box>
            </brls:Box>
            <brls:Box
                cornerRadius="4"
                backgroundColor="@theme/brls/backdrop"
                detachedX="30"
                detachedY="-20"
                visibility="gone"
                height="32"
                id="video/osd/hint/box">
                <brls:Label
                    id="video/osd/hint/label"
                    marginLeft="10"
                    marginRight="10"
                    marginTop="4"
                    marginBottom="4"
                    maxWidth="600"
                    textColor="#FFFFFF" />
            </brls:Box>
        </brls:Box>
    </brls:Box>

</brls:Box>