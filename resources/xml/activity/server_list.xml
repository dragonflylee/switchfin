<brls:AppletFrame
    id="server/frame"
    iconInterpolation="linear"
    headerHidden="true"
    footerHidden="false">

    <brls:Box
        axis="column"
        width="100%"
        height="100%">

        <AutoTabFrame
            id="main/tabFrame"
            grow="1"
            tabBackgroundColor="@theme/color/grey_1"
            tabItemActiveTextColor="@theme/color/app"
            defaultTab="0"
            sidebarPosition="left">

            <Tab label=""
                fontSize="18"
                icon="@res/icon/ico-home.svg"
                iconActivate="@res/icon/ico-home-activate.svg">

                <brls:Box
                    axis="row"
                    paddingLeft="@style/brls/tab_frame/content_padding_sides"
                    paddingRight="@style/brls/tab_frame/content_padding_sides"
                    paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                    paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

                    <brls:Box
                        wireframe="false"
                        width="420"
                        axis="column"
                        paddingRight="@style/brls/sidebar/padding_right"
                        lineColor="@theme/color/line"
                        lineRight="1">

                        <brls:Header
                            width="auto"
                            height="auto"
                            title="@i18n/main/setting/server/header"
                            marginBottom="0px" />

                        <brls:Button
                            id="btn/server/add"
                            style="primary"
                            margin="15"
                            focusable="true"
                            text="@i18n/main/setting/server/connect_new" />

                        <brls:ScrollingFrame
                            grow="1">
                            <brls:Box
                                axis="column"
                                id="server/sidebar"
                                paddingRight="20" />

                        </brls:ScrollingFrame>
                    </brls:Box>

                    <brls:Box
                        wireframe="false"
                        paddingLeft="35"
                        axis="column"
                        id="server/detail"
                        grow="1">

                        <brls:Header
                            width="auto"
                            height="auto"
                            title="@i18n/main/setting/server/detail" />

                        <brls:Box
                            width="100%"
                            height="auto"
                            axis="column">

                            <brls:SelectorCell
                                height="auto"
                                title="@i18n/main/setting/url"
                                id="selector/server/urls" />

                            <brls:DetailCell
                                height="auto"
                                title="@i18n/main/setting/version"
                                focusable="false"
                                id="server/version" />

                            <brls:DetailCell
                                height="auto"
                                title="@i18n/main/setting/os"
                                focusable="false"
                                id="server/os" />

                        </brls:Box>

                        <brls:Box
                            width="100%"
                            height="auto"
                            marginTop="20px"
                            marginBottom="20px">

                            <brls:Button
                                id="btn/server/signin"
                                style="primary"
                                grow="1.0"
                                text="@i18n/main/setting/server/signin" />
                        </brls:Box>

                        <RecyclingGrid
                            paddingRight="20"
                            grow="1"
                            spanCount="3"
                            wireframe="false"
                            id="user/recycler" />

                    </brls:Box>

                </brls:Box>
            </Tab>

            <Tab label=""
                fontSize="18"
                icon="@res/icon/ico-setting.svg"
                iconActivate="@res/icon/ico-setting-activate.svg">
                <SettingTab
                    hideStatus="true" />
            </Tab>

        </AutoTabFrame>
    </brls:Box>
</brls:AppletFrame>