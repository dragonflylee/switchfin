<brls:AppletFrame
    id="server/frame"
    iconInterpolation="linear"
    headerHidden="true"
    footerHidden="false">

    <brls:Box
        axis="row"
        paddingLeft="@style/brls/tab_frame/content_padding_sides"
        paddingRight="@style/brls/tab_frame/content_padding_sides"
        paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
        paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

        <brls:Box
            wireframe="false"
            width="40%"
            axis="column"
            paddingRight="@style/brls/sidebar/padding_right"
            lineColor="@theme/color/line"
            lineRight="1">

            <brls:Header
                width="auto"
                height="auto"
                title="@i18n/main/setting/server/header"
                marginBottom="0px" />

            <brls:Box
                width="100%"
                height="auto"
                paddingRight="20"
                marginBottom="20"
                marginTop="20">

                <brls:Button
                    id="btn/server/add"
                    style="primary"
                    grow="1.0"
                    text="@i18n/main/setting/server/connect_new" />
            </brls:Box>

            <RecyclingGrid
                id="server/recycler"
                grow="1"
                spanCount="1"
                wireframe="false"
                itemHeight="100" />
        </brls:Box>

        <brls:Box
            wireframe="false"
            paddingLeft="@style/brls/sidebar/padding_left"
            axis="column"
            grow="1">

            <brls:Header
                width="auto"
                height="auto"
                title="@i18n/main/setting/server/detail" />

            <brls:Box
                width="100%"
                height="auto"
                axis="column">

                <brls:SelectorCell
                    height="auto"
                    title="@i18n/main/setting/url"
                    id="selector/server/urls" />

                <brls:DetailCell
                    height="auto"
                    title="@i18n/main/setting/version"
                    focusable="false"
                    id="server/version" />

                <brls:DetailCell
                    height="auto"
                    title="@i18n/main/setting/os"
                    focusable="false"
                    id="server/os" />

            </brls:Box>

            <brls:Box
                width="100%"
                height="auto"
                marginTop="20px"
                marginBottom="20px">

                <brls:Button
                    id="btn/server/signin"
                    style="primary"
                    grow="1.0"
                    text="@i18n/main/setting/server/signin" />
            </brls:Box>

            <RecyclingGrid
                paddingRight="20"
                grow="1"
                spanCount="3"
                wireframe="false"
                id="user/recycler" />

        </brls:Box>

    </brls:Box>
</brls:AppletFrame>