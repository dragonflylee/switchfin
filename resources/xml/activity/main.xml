<brls:AppletFrame
    id="main/frame"
    iconInterpolation="linear"
    headerHidden="true"
    footerHidden="false">
    <brls:Box
        axis="column"
        width="100%"
        height="100%">
        <AutoTabFrame
            id="main/tabFrame"
            grow="1"
            tabBackgroundColor="@theme/color/grey_1"
            tabItemActiveTextColor="@theme/color/app"
            defaultTab="0"
            sidebarPosition="left">

            <Tab label=""
                fontSize="18"
                icon="@res/icon/ico-home.svg"
                iconActivate="@res/icon/ico-home-activate.svg">
                <HomeTab latestSize="20" />
            </Tab>

            <Tab label=""
                fontSize="18"
                icon="@res/icon/ico-media.svg"
                iconActivate="@res/icon/ico-media-activate.svg">
                <MediaFolders />
            </Tab>

            <Tab label=""
                fontSize="18"
                icon="@res/icon/ico-search.svg"
                iconActivate="@res/icon/ico-search-activate.svg">
                <SearchTab />
            </Tab>

            <Tab label=""
                fontSize="18"
                icon="@res/icon/ico-setting.svg"
                iconActivate="@res/icon/ico-setting-activate.svg">
                <SettingTab />
            </Tab>

        </AutoTabFrame>
    </brls:Box>
</brls:AppletFrame>