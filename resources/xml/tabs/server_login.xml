<brls:Box
    alignItems="center"
    justifyContent="center">

    <brls:Box
        width="50%"
        height="auto"
        axis="column"
        alignItems="stretch">

        <brls:Header
            width="auto"
            height="auto"
            id="server/sigin_to"
            marginBottom="0" />
        <brls:Box
            width="100%"
            height="auto"
            axis="column">

            <brls:InputCell
                id="server/user" />

            <brls:InputCell
                id="server/pass" />

            <brls:Button
                text="@i18n/main/setting/server/signin"
                style="primary"
                fontSize="@style/brls/sidebar/item_font_size"
                padding="12.5"
                id="server/signin" />

        </brls:Box>

    </brls:Box>
</brls:Box>