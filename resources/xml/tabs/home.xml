<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        grow="1.0">

        <brls:Box
            width="auto"
            height="auto"
            axis="column"
            paddingLeft="@style/brls/tab_frame/content_padding_sides"
            paddingRight="@style/brls/tab_frame/content_padding_sides"
            paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
            paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

            <brls:Header
                width="auto"
                height="auto"
                title="@i18n/main/home/resume"
                id="home/header/resume"
                marginBottom="0px" />
            <HRecyclerFrame
                width="auto"
                height="240"
                itemWidth="350"
                id="home/user/resume" />

            <brls:Header
                width="auto"
                height="auto"
                marginTop="15"
                title="@i18n/main/home/nextup"
                id="home/header/nextup"
                marginBottom="0px" />
            <HRecyclerFrame
                width="auto"
                height="240"
                itemWidth="350"
                id="home/show/nextup" />

            <brls:Header
                width="auto"
                height="auto"
                marginTop="15"
                title="@i18n/main/home/latest"
                id="home/header/latest"
                marginBottom="0px" />
            <HRecyclerFrame
                width="auto"
                height="300"
                itemWidth="180"
                id="home/user/latest" />

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>