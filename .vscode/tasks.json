{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-DPLATFORM_DESKTOP=ON",
        "-DCMAKE_BUILD_TYPE=Release",
        "-B", "build_pc",
        "-G", "MinGW Makefiles"
      ],
    },
    {
      "label": "build",
      "type": "shell",
      "command": "make",
      "args": [
        "-C", "build_pc"
      ],
    }
  ]
}